<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RigisterActivity">
    <ImageView
        android:id="@+id/imgregistion"
        android:layout_width="80dp"
        android:layout_height="80dp"


        android:layout_alignEnd="@+id/btnregister"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="168dp"
        android:src="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="245dp"
        android:maxHeight="80dp"
        android:maxWidth="80dp"

        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="RIGISTER"
        android:textColor="#de0707"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txtuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtuserid"


        android:layout_alignStart="@+id/btnregister"
        android:text="Username"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/edtpasswordregistion"

        android:layout_alignStart="@+id/txtuser"
        android:text="Password"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="140dp" />

    <TextView
        android:id="@+id/txtconfirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBaseline="@+id/edtpasswordregistionagain"
        android:layout_alignEnd="@+id/txtuser"
        android:text="Confirm Password"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="209dp" />

    <EditText

        android:id="@+id/edtuserid"
        android:layout_width="150dp"
        android:layout_height="wrap_content"


        android:layout_alignParentTop="true"

        android:layout_alignStart="@+id/imgregistion"
        android:layout_marginTop="102dp"
        android:hint="username"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="67dp" />

    <EditText
        android:id="@+id/edtpasswordregistion"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imgregistion"
        android:layout_marginTop="161dp"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="125dp" />

    <EditText
        android:id="@+id/edtpasswordregistionagain"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"

        android:layout_alignStart="@+id/imgregistion"
        android:layout_marginTop="218dp"
        android:hint="Password confirm"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="191dp" />

    <TextView
        android:id="@+id/txtconfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignEnd="@+id/txtconfirmpassword"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="202dp"
        android:text="Chose Image"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="246dp" />

    <Button
        android:id="@+id/btnregister"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:background="#131374"
        android:text="REGISTER"
        android:textColor="#ffff"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="347dp" />
</RelativeLayout>